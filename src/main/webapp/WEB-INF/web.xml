<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <!-- Filter -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.jwd.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>antiInjectionFilter</filter-name>
        <filter-class>com.jwd.filter.AntiInjectionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>antiInjectionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Filter END -->

    <servlet>
        <servlet-name>frontServlet</servlet-name>
        <servlet-class>com.jwd.FrontController</servlet-class>
        <init-param>
            <param-name>q</param-name>
            <param-value>1</param-value>
        </init-param>
        <init-param>
            <param-name>qw</param-name>
            <param-value>12</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>frontServlet</servlet-name>
        <url-pattern></url-pattern>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
</web-app>